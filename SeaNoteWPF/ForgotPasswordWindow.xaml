<Window x:Class="SeaNoteWPF.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reset Password" Height="600" Width="500"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="20" ClipToBounds="True" Background="{StaticResource BgColor}">
        <Grid>
            <Ellipse Width="400" Height="400" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="-100,-100,-100,0" Opacity="0.2" IsHitTestVisible="False">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#64FFDA" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>

            <Ellipse Width="400" Height="400" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-100,0,0,-100" Opacity="0.15" IsHitTestVisible="False">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#F59E0B" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>

            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Reset Password" Style="{StaticResource HeaderTitle}" FontSize="28"/>
                        <TextBlock Text="Verifikasi akun anda untuk melanjutkan" Foreground="#8D99AE" FontSize="14" Margin="2,5,0,0" FontFamily="{StaticResource Raleway}"/>
                    </StackPanel>
                    <Button Content="✕" Click="BtnClose_Click" HorizontalAlignment="Right" VerticalAlignment="Top"
                            Background="Transparent" Foreground="White" BorderThickness="0" FontSize="16" Cursor="Hand"/>
                </Grid>

                <Border Grid.Row="1" Background="#331C2541" CornerRadius="20" Padding="30" BorderBrush="#33FFFFFF" BorderThickness="1">
                    <StackPanel>

                        <TextBlock Text="Username" Foreground="#8D99AE" Margin="0,0,0,5"/>
                        <TextBox x:Name="tbUsername" Style="{StaticResource InputStyle}" Margin="0,0,0,15"/>

                        <TextBlock Text="Email" Foreground="#8D99AE" Margin="0,0,0,5"/>
                        <TextBox x:Name="tbEmail" Style="{StaticResource InputStyle}" Margin="0,0,0,20"/>

                        <Button x:Name="btnVerify" Content="Verify Account" Click="BtnVerify_Click" 
                                Background="{StaticResource BtnUpdateDefault}" Foreground="White" FontWeight="Bold" Height="45" Margin="0,0,0,20">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <StackPanel x:Name="PanelReset" Visibility="Collapsed">
                            <Separator Background="#33FFFFFF" Margin="0,10,0,20"/>

                            <TextBlock Text="New Password" Foreground="#64FFDA" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="tbNewPass" Style="{StaticResource InputStyle}" Margin="0,0,0,15"/>

                            <TextBlock Text="Confirm Password" Foreground="#64FFDA" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="tbConfirmPass" Style="{StaticResource InputStyle}" Margin="0,0,0,20"/>

                            <Button Content="🔒 CHANGE PASSWORD" Click="BtnReset_Click" 
                                    Background="{StaticResource BtnAddDefault}" Foreground="#0B132B" FontWeight="Bold" Height="45">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>

                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>