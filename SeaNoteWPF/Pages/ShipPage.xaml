<Page x:Class="SeaNoteWPF.Pages.ShipPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ShipPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Ships Management" Style="{StaticResource HeaderTitle}" FontSize="32"/>
            <TextBlock Text="Kelola data armada kapal laut" Foreground="#8D99AE" FontSize="14" Margin="2,5,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Style="{StaticResource NavyCard}">
                <StackPanel>
                    <TextBlock Text="TOTAL SHIPS" Style="{StaticResource CardLabel}" FontSize="14"/>
                    <TextBlock x:Name="lblCount" Text="0" Style="{StaticResource BigNumberGold}" FontSize="48"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="2" Style="{StaticResource NavyCard}">
                <StackPanel>
                    <TextBlock Text="TOTAL CAPACITY" Style="{StaticResource CardLabel}" FontSize="14"/>
                    <TextBlock x:Name="lblCapacity" Text="0" Style="{StaticResource BigNumberGold}" FontSize="48" Foreground="#E6F1FF"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="4" Style="{StaticResource NavyCard}">
                <StackPanel>
                    <TextBlock Text="TOTAL TRIPS" Style="{StaticResource CardLabel}" FontSize="14"/>
                    <TextBlock x:Name="lblTrips" Text="0" Style="{StaticResource BigNumberGold}" FontSize="48" Foreground="#E6F1FF"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="#331C2541" CornerRadius="20" Padding="20" BorderBrush="#33FFFFFF" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="tbSearch" Style="{StaticResource InputStyle}" Tag="Search ships..." TextChanged="TbSearch_TextChanged"/>
                    <Button Grid.Column="2" Content="+ Add Ship" Click="BtnAdd_Click" Background="{StaticResource BtnAddDefault}" Foreground="#0B132B" FontWeight="Bold" Padding="20,10">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
                <DataGrid x:Name="dgShips" Grid.Row="1" Style="{StaticResource GlassDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="100"/>
                        <DataGridTextColumn Header="Capacity" Binding="{Binding Capacity}" Width="120"/>
                        <DataGridTextColumn Header="Fuel" Binding="{Binding Fuel}" Width="120"/>
                        <DataGridTemplateColumn Header="Actions" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="✏️" Click="BtnEdit_Click" Tag="{Binding Id}" Background="Transparent" BorderThickness="0" Cursor="Hand"/>
                                        <Button Content="❌" Click="BtnDelete_Click" Tag="{Binding Id}" Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <Grid x:Name="ModalOverlay" Visibility="Collapsed" Background="#CC000000">
            <Border Width="450" Background="{StaticResource GlassModalBg}" CornerRadius="20" Padding="30" BorderBrush="#33FFFFFF" BorderThickness="1">
                <StackPanel>
                    <TextBlock x:Name="lblModalTitle" Text="Add Ship" Style="{StaticResource HeaderTitle}" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TextBlock Text="Ship Name" Foreground="#8D99AE"/>
                    <TextBox x:Name="tbName" Style="{StaticResource GlassInput}" Margin="0,0,0,15"/>
                    <TextBlock Text="Year" Foreground="#8D99AE"/>
                    <TextBox x:Name="tbYear" Style="{StaticResource GlassInput}" Margin="0,0,0,15"/>
                    <TextBlock Text="Capacity" Foreground="#8D99AE"/>
                    <TextBox x:Name="tbCapacity" Style="{StaticResource GlassInput}" Margin="0,0,0,15"/>
                    <TextBlock Text="Fuel Type" Foreground="#8D99AE"/>
                    <TextBox x:Name="tbFuel" Style="{StaticResource GlassInput}" Margin="0,0,0,30"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnSave" Content="Save" Click="BtnSave_Click" Grid.Column="0" Background="{StaticResource BtnAddDefault}" Foreground="#0B132B" FontWeight="Bold" Height="45">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="Cancel" Click="BtnCloseModal_Click" Grid.Column="2" Background="Transparent" BorderBrush="#8D99AE" BorderThickness="1" Foreground="White" Height="45">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>