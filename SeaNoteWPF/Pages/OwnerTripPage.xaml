<Page x:Class="SeaNoteWPF.Pages.OwnerTripPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="OwnerTripPage">

    <Grid Margin="30,20,30,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Active Trips" Style="{StaticResource HeaderTitle}"/>
            <TextBlock Text="Pantau pergerakan armada secara real-time" Foreground="#8D99AE" FontSize="14" Margin="2,5,0,0" FontFamily="{StaticResource Raleway}"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#331C2541" CornerRadius="20" Padding="20" BorderBrush="#33FFFFFF" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="tbSearch" Style="{StaticResource InputStyle}" Tag="Search trip..." TextChanged="TbSearch_TextChanged"/>
                    <Button Grid.Column="2" Content="⬇ Report" Click="BtnExport_Click" Background="#2A9D8F" Foreground="White" FontWeight="Bold" Padding="20,10">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <DataGrid x:Name="dgTrips" Grid.Row="1" Style="{StaticResource GlassDataGrid}" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ship Name" Binding="{Binding ShipName}" Width="*"/>
                        <DataGridTextColumn Header="Route" Binding="{Binding Route}" Width="*"/>
                        <DataGridTextColumn Header="Departure" Binding="{Binding Date}" Width="120"/>
                        <DataGridTextColumn Header="Captain" Binding="{Binding Captain}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Page>