<Page x:Class="SeaNoteWPF.Pages.AdminHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AdminHomePage">

    <Grid>
        <Grid Margin="30,20,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock x:Name="txtWelcome" Text="Halo, Admin!" Style="{StaticResource HeaderTitle}"/>
                <TextBlock x:Name="txtDate" Text="Overview Dashboard" Foreground="#8D99AE" FontSize="16" Margin="5,5,0,0"/>
            </StackPanel>

            <Border Grid.Row="1" Height="90" Margin="0,0,0,30" Background="#331C2541" CornerRadius="20" BorderBrush="#33FFFFFF" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0">
                        <TextBlock x:Name="txtWeatherIcon" Text="☁️" FontSize="32" Margin="0,0,15,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="txtTemp" Text="Loading..." Foreground="White" FontWeight="Bold" FontSize="18"/>
                            <ComboBox x:Name="cbCity" Width="120" Margin="-5,5,0,0" FontSize="12" FontWeight="SemiBold" Background="Transparent" Foreground="#8D99AE"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Column="2" x:Name="BtnGemini" Margin="30,0" Click="BtnGemini_Click" Style="{StaticResource BtnGhost}" BorderThickness="0" Content="✨ ASK GEMINI AI..."/>
                </Grid>
            </Border>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                    <RadioButton Content="All" IsChecked="True" Style="{StaticResource TabButtonStyle}"/>
                    <RadioButton Content="Trips" Style="{StaticResource TabButtonStyle}"/>
                    <RadioButton Content="Maintenance" Style="{StaticResource TabButtonStyle}"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#331C2541" CornerRadius="20" Padding="20">
                        <Grid>
                            <TextBlock Text="TRIPS HISTORY" Style="{StaticResource CardLabel}" HorizontalAlignment="Left"/>
                            <DataGrid x:Name="dgTrips" Grid.Row="1" Style="{StaticResource GlassDataGrid}"/>
                        </Grid>
                    </Border>
                    <Border Grid.Column="2" Background="#331C2541" CornerRadius="20" Padding="20">
                        <Grid>
                            <TextBlock Text="SHIPS OVERVIEW" Style="{StaticResource CardLabel}" HorizontalAlignment="Left"/>
                            <DataGrid x:Name="dgShips" Grid.Row="1" Style="{StaticResource GlassDataGrid}"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <Grid x:Name="GeminiOverlay" Visibility="Collapsed" Background="#CC000000">
            <Border Width="600" Height="500" Background="#1C2541" CornerRadius="20" Padding="25" BorderBrush="#64FFDA" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="🤖 Ask SeaNote AI" Foreground="#64FFDA" FontSize="20" FontWeight="Bold"/>
                        <Button Content="✕" Click="BtnCloseGemini_Click" HorizontalAlignment="Right" Background="Transparent" Foreground="White" BorderThickness="0"/>
                    </Grid>
                    <TextBox x:Name="txtGeminiOutput" Grid.Row="1" Background="#0B132B" Foreground="#E6F1FF" BorderThickness="0" TextWrapping="Wrap" IsReadOnly="True" Padding="10"/>
                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtGeminiInput" Grid.Column="0" Style="{StaticResource InputStyle}" Height="45" Margin="0,0,10,0" KeyDown="TxtGeminiInput_KeyDown"/>
                        <Button Content="SEND" Grid.Column="1" Click="BtnSendGemini_Click" Background="{StaticResource BtnAddDefault}" Foreground="Black" FontWeight="Bold"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>