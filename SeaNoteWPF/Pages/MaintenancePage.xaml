<Page x:Class="SeaNoteWPF.Pages.MaintenancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MaintenancePage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Maintenance Monitor" Style="{StaticResource HeaderTitle}" FontSize="32"/>
            <TextBlock Text="Pantau status perbaikan dan kondisi mesin kapal" Foreground="#8D99AE" FontSize="14" Margin="2,5,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource NavyCard}">
                <StackPanel>
                    <TextBlock Text="TOTAL REPORTS" Style="{StaticResource CardLabel}" FontSize="14"/>
                    <TextBlock x:Name="lblTotal" Text="0" Style="{StaticResource BigNumberGold}" FontSize="48"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="2" Style="{StaticResource NavyCard}">
                <StackPanel>
                    <TextBlock Text="PENDING / CRITICAL" Style="{StaticResource CardLabel}" FontSize="14"/>
                    <TextBlock x:Name="lblPending" Text="0" Style="{StaticResource BigNumberGold}" FontSize="48" Foreground="#FF4757"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="4" Style="{StaticResource NavyCard}">
                <StackPanel>
                    <TextBlock Text="RESOLVED" Style="{StaticResource CardLabel}" FontSize="14"/>
                    <TextBlock x:Name="lblResolved" Text="0" Style="{StaticResource BigNumberGold}" FontSize="48" Foreground="#64FFDA"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="#331C2541" CornerRadius="20" Padding="20" BorderBrush="#33FFFFFF" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <RadioButton x:Name="rbAll" Content="All" IsChecked="True" Style="{StaticResource TabButtonStyle}" Click="Filter_Click"/>
                        <RadioButton x:Name="rbPending" Content="Pending" Style="{StaticResource TabButtonStyle}" Click="Filter_Click"/>
                        <RadioButton x:Name="rbCompleted" Content="Completed" Style="{StaticResource TabButtonStyle}" Click="Filter_Click"/>
                    </StackPanel>

                    <TextBox x:Name="tbSearch" Grid.Column="2" Style="{StaticResource InputStyle}" Tag="Search issue..." TextChanged="TbSearch_TextChanged"/>
                </Grid>

                <DataGrid x:Name="dgMaint" Grid.Row="1" Style="{StaticResource GlassDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ship Name" Binding="{Binding ShipName}" Width="150"/>
                        <DataGridTextColumn Header="Issue Description" Binding="{Binding Description}" Width="*"/>
                        <DataGridTextColumn Header="Engineer" Binding="{Binding Engineer}" Width="120"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="100"/>

                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100" FontWeight="Bold">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Pending">
                                            <Setter Property="Foreground" Value="#F59E0B"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Completed">
                                            <Setter Property="Foreground" Value="#64FFDA"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="Actions" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="✏️" Click="BtnEdit_Click" Tag="{Binding Id}" Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Update Status"/>
                                        <Button Content="❌" Click="BtnDelete_Click" Tag="{Binding Id}" Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="15,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <Grid x:Name="ModalOverlay" Visibility="Collapsed" Background="#CC000000">
            <Border Width="400" Background="{StaticResource GlassModalBg}" CornerRadius="20" Padding="30" BorderBrush="#64FFDA" BorderThickness="1" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Update Status" Style="{StaticResource HeaderTitle}" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TextBlock Text="Ship Name" Foreground="#8D99AE" Margin="0,5"/>
                    <TextBox x:Name="tbShipName" Style="{StaticResource GlassInput}" IsReadOnly="True" Opacity="0.7" Margin="0,0,0,15"/>

                    <TextBlock Text="Issue" Foreground="#8D99AE" Margin="0,5"/>
                    <TextBox x:Name="tbIssue" Style="{StaticResource GlassInput}" Height="60" TextWrapping="Wrap" IsReadOnly="True" Opacity="0.7" Margin="0,0,0,15"/>

                    <TextBlock Text="Status" Foreground="#8D99AE" Margin="0,5"/>
                    <ComboBox x:Name="cbStatus" Height="40" Margin="0,0,0,30" FontSize="14" Padding="10,5">
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="In Progress"/>
                        <ComboBoxItem Content="Completed"/>
                        <ComboBoxItem Content="Critical"/>
                    </ComboBox>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Update" Click="BtnSave_Click" Grid.Column="0" Background="{StaticResource BtnAddDefault}" Foreground="#0B132B" FontWeight="Bold" Height="45">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="Cancel" Click="BtnCloseModal_Click" Grid.Column="2" Background="Transparent" BorderBrush="#8D99AE" BorderThickness="1" Foreground="White" Height="45">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>