<Page x:Class="SeaNoteWPF.Pages.EngineerHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="EngineerHomePage">

    <Grid>
        <Grid Margin="30,20,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock x:Name="txtWelcome" Text="Halo, Engineer!" Style="{StaticResource HeaderTitle}"/>
                <TextBlock Text="Ready to work?" Foreground="#8D99AE" FontSize="16" Margin="5,5,0,0" FontFamily="{StaticResource Raleway}"/>
            </StackPanel>

            <Border Grid.Row="1" Height="90" Margin="0,0,0,30" Background="#331C2541" CornerRadius="20" BorderBrush="#33FFFFFF" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0">
                        <TextBlock Text="🛠️" FontSize="32" Margin="0,0,15,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Engine Status: OK" Foreground="White" FontWeight="Bold" FontSize="18" FontFamily="{StaticResource Raleway}"/>
                            <TextBlock Text="No critical alerts." Foreground="#8D99AE" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                    <Button Grid.Column="2" Margin="20,0" Click="BtnGemini_Click" Style="{StaticResource BtnGhost}" BorderThickness="0" Content="✨ ASK AI..."/>
                </Grid>
            </Border>

            <Grid Grid.Row="2" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Style="{StaticResource NavyCard}">
                    <StackPanel>
                        <TextBlock Text="PENDING" Style="{StaticResource CardLabel}"/>
                        <TextBlock x:Name="lblPending" Text="0" Style="{StaticResource BigNumberGold}" Foreground="#F59E0B"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource NavyCard}">
                    <StackPanel>
                        <TextBlock Text="ASSIGNED" Style="{StaticResource CardLabel}"/>
                        <TextBlock x:Name="lblAssigned" Text="0" Style="{StaticResource BigNumberGold}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Column="4" Style="{StaticResource NavyCard}">
                    <StackPanel>
                        <TextBlock Text="COMPLETED" Style="{StaticResource CardLabel}"/>
                        <TextBlock x:Name="lblCompleted" Text="0" Style="{StaticResource BigNumberGold}" Foreground="#64FFDA"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Grid.Row="3" Background="#331C2541" CornerRadius="20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="RECENT WORK" Style="{StaticResource CardLabel}" HorizontalAlignment="Left"/>
                    <DataGrid x:Name="dgActivity" Grid.Row="1" Style="{StaticResource GlassDataGrid}" IsReadOnly="True"/>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="GeminiOverlay" Visibility="Collapsed" Background="#CC000000">
            <Border Width="600" Height="500" Background="#1C2541" CornerRadius="20" Padding="25" BorderBrush="#64FFDA" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="🤖 Engineer AI Assistant" Foreground="#64FFDA" FontSize="20" FontWeight="Bold"/>
                        <Button Content="✕" Click="BtnCloseGemini_Click" HorizontalAlignment="Right" Background="Transparent" Foreground="White" BorderThickness="0"/>
                    </Grid>
                    <TextBox x:Name="txtGeminiOutput" Grid.Row="1" Background="#0B132B" Foreground="#E6F1FF" BorderThickness="0" TextWrapping="Wrap" IsReadOnly="True" Padding="10"/>
                    <Grid Grid.Row="2" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtGeminiInput" Grid.Column="0" Style="{StaticResource InputStyle}" Height="45" Margin="0,0,10,0" KeyDown="TxtGeminiInput_KeyDown"/>
                        <Button Content="SEND" Grid.Column="1" Click="BtnSendGemini_Click" Background="{StaticResource BtnAddDefault}" Foreground="Black" FontWeight="Bold"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>