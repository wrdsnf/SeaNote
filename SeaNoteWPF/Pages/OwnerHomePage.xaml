<Page x:Class="SeaNoteWPF.Pages.OwnerHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="OwnerHomePage">

    <Grid>
        <Grid Margin="30,20,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock x:Name="txtWelcome" Text="Halo, Boss!" Style="{StaticResource HeaderTitle}"/>
                    <TextBlock Text="Pantau aset bisnismu hari ini" Foreground="#8D99AE" FontSize="16" Margin="5,5,0,0" FontFamily="{StaticResource Raleway}"/>
                </StackPanel>

                <Button Grid.Column="1" Content="📢 Broadcast" Click="BtnBroadcast_Click"
                        Background="#FF4757" Foreground="White" FontWeight="Bold" Padding="20,10" Height="45">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>

            <Grid Grid.Row="1" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource NavyCard}">
                    <StackPanel>
                        <TextBlock Text="MY SHIPS" Style="{StaticResource CardLabel}" FontSize="14"/>
                        <TextBlock x:Name="lblShips" Text="0" Style="{StaticResource BigNumberGold}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource NavyCard}">
                    <StackPanel>
                        <TextBlock Text="ACTIVE TRIPS" Style="{StaticResource CardLabel}" FontSize="14"/>
                        <TextBlock x:Name="lblTrips" Text="0" Style="{StaticResource BigNumberGold}" Foreground="#64FFDA"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" Style="{StaticResource NavyCard}">
                    <StackPanel>
                        <TextBlock Text="ISSUES" Style="{StaticResource CardLabel}" FontSize="14"/>
                        <TextBlock x:Name="lblIssues" Text="0" Style="{StaticResource BigNumberGold}" Foreground="#FF4757"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Grid.Row="2" Background="#331C2541" CornerRadius="20" Padding="20" BorderBrush="#33FFFFFF" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="FLEET ACTIVITY LOG" Style="{StaticResource CardLabel}" Margin="10" HorizontalAlignment="Left"/>
                    <DataGrid x:Name="dgActivity" Grid.Row="1" Style="{StaticResource GlassDataGrid}" IsReadOnly="True"/>
                </Grid>
            </Border>
        </Grid>

        <Grid x:Name="MsgOverlay" Visibility="Collapsed" Background="#CC000000">
            <Border Width="450" Background="{StaticResource GlassModalBg}" CornerRadius="20" Padding="30" BorderBrush="#FF4757" BorderThickness="1" VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Send Broadcast" Style="{StaticResource HeaderTitle}" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TextBlock Text="Target" Style="{StaticResource GlassLabel}"/>
                    <ComboBox x:Name="cbTarget" Height="40" Margin="0,0,0,15" FontSize="14" Padding="10,5">
                        <ComboBoxItem Content="All Staff" IsSelected="True"/>
                        <ComboBoxItem Content="admin"/>
                        <ComboBoxItem Content="engineer"/>
                    </ComboBox>

                    <TextBlock Text="Message" Style="{StaticResource GlassLabel}"/>
                    <TextBox x:Name="tbMsg" Style="{StaticResource GlassInput}" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,30"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Send" Click="BtnSendMsg_Click" Grid.Column="0" Background="{StaticResource BtnAddDefault}" Foreground="#0B132B" FontWeight="Bold" Height="45">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="Cancel" Click="BtnCloseMsg_Click" Grid.Column="2" Background="Transparent" BorderBrush="#8D99AE" BorderThickness="1" Foreground="White" Height="45">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>