<Page x:Class="SeaNoteWPF.Pages.OwnerShipPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="OwnerShipPage">

    <Grid Margin="30,20,30,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Fleet Overview" Style="{StaticResource HeaderTitle}"/>
            <TextBlock Text="Monitoring seluruh armada kapal perusahaan" Foreground="#8D99AE" FontSize="14" Margin="2,5,0,0" FontFamily="{StaticResource Raleway}"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Style="{StaticResource NavyCard}">
                <StackPanel>
                    <TextBlock Text="TOTAL SHIPS" Style="{StaticResource CardLabel}"/>
                    <TextBlock x:Name="lblTotal" Text="0" Style="{StaticResource BigNumberGold}"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="2" Style="{StaticResource NavyCard}">
                <StackPanel>
                    <TextBlock Text="TOTAL CAPACITY" Style="{StaticResource CardLabel}"/>
                    <TextBlock x:Name="lblCap" Text="0" Style="{StaticResource BigNumberGold}" Foreground="#64FFDA"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="#331C2541" CornerRadius="20" Padding="20" BorderBrush="#33FFFFFF" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="tbSearch" Style="{StaticResource InputStyle}" Tag="Search fleet..." TextChanged="TbSearch_TextChanged"/>
                    <Button Grid.Column="2" Content="⬇ Export Data" Click="BtnExport_Click"
                            Background="#2A9D8F" Foreground="White" FontWeight="Bold" Padding="20,10">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <DataGrid x:Name="dgShips" Grid.Row="1" Style="{StaticResource GlassDataGrid}" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ship Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="100"/>
                        <DataGridTextColumn Header="Capacity (Ton)" Binding="{Binding Capacity}" Width="150"/>
                        <DataGridTextColumn Header="Fuel Type" Binding="{Binding Fuel}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Page>