<Window x:Class="SeaNoteWPF.DashboardOwnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Owner Dashboard" Height="768" Width="1366"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="20" ClipToBounds="True" Background="{StaticResource BgColor}">
        <Grid>
            <Ellipse Width="800" Height="800" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="-200,-300,-200,0" Opacity="0.2" IsHitTestVisible="False">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#00B4D8" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
                <Ellipse.Effect>
                    <BlurEffect Radius="120"/>
                </Ellipse.Effect>
            </Ellipse>

            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Width="80" Margin="0,20" VerticalAlignment="Stretch" Background="#33FFFFFF" CornerRadius="40" BorderBrush="#22FFFFFF" BorderThickness="1">
                    <Grid>
                        <StackPanel VerticalAlignment="Top" Margin="0,30,0,0">
                            <Border Width="50" Height="50" CornerRadius="25" Background="#F59E0B" Margin="0,0,0,40">
                                <TextBlock Text="O" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                            </Border>
                            <Button x:Name="NavHome" Tag="Home" Content="🏠" Style="{StaticResource MenuPillStyle}" Click="Nav_Click"/>
                            <Button x:Name="NavShips" Tag="Ships" Content="🚢" Style="{StaticResource MenuPillStyle}" Click="Nav_Click"/>
                            <Button x:Name="NavTrips" Tag="Trips" Content="⚓" Style="{StaticResource MenuPillStyle}" Click="Nav_Click"/>
                            <Button x:Name="NavReport" Tag="Report" Content="📊" Style="{StaticResource MenuPillStyle}" Click="Nav_Click"/>
                        </StackPanel>
                        <Button VerticalAlignment="Bottom" Margin="0,0,0,30" Click="BtnLogout_Click" Style="{StaticResource MenuPillStyle}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="50" Height="50" CornerRadius="25" Background="#FF4757" Cursor="Hand">
                                        <TextBlock Text="⏻" Foreground="White" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Margin="20,0,0,0"/>
            </Grid>
        </Grid>
    </Border>
</Window>