<Window x:Class="SeaNoteWPF.DashboardAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="768" Width="1366"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        WindowState="Maximized" Background="{StaticResource BgColor}" AllowsTransparency="False"
        Loaded="Window_Loaded">

    <Grid>
        <Ellipse Width="1000" Height="1000" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="-300,-400,-200,0" Opacity="0.15" IsHitTestVisible="False">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#64FFDA" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <BlurEffect Radius="150"/>
            </Ellipse.Effect>
        </Ellipse>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#1AFFFFFF" BorderBrush="#22FFFFFF" BorderThickness="0,0,1,0">
                <Grid>
                    <StackPanel VerticalAlignment="Top" Margin="0,30,0,0">
                        <Border Width="50" Height="50" CornerRadius="25" Background="White" Margin="0,0,0,40">
                            <TextBlock Text="A" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#0B132B"/>
                        </Border>

                        <Button x:Name="NavHome" Tag="Home" Content="🏠" Style="{StaticResource MenuPillStyle}" Click="Nav_Click" ToolTip="Dashboard"/>
                        <Button x:Name="NavShips" Tag="Ships" Content="🚢" Style="{StaticResource MenuPillStyle}" Click="Nav_Click" ToolTip="Ships"/>
                        <Button x:Name="NavTrips" Tag="Trips" Content="⚓" Style="{StaticResource MenuPillStyle}" Click="Nav_Click" ToolTip="Trips"/>
                        <Button x:Name="NavMaint" Tag="Maint" Content="🔧" Style="{StaticResource MenuPillStyle}" Click="Nav_Click" ToolTip="Maintenance"/>
                        <Button x:Name="NavUsers" Tag="Users" Content="👥" Style="{StaticResource MenuPillStyle}" Click="Nav_Click" ToolTip="Users"/>
                    </StackPanel>

                    <Button VerticalAlignment="Bottom" Margin="0,0,0,30" Click="BtnLogout_Click" Style="{StaticResource MenuPillStyle}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="50" Height="50" CornerRadius="25" Background="#FF4757" Cursor="Hand">
                                    <TextBlock Text="⏻" Foreground="White" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,20,0" Click="BtnCloseApp_Click" Background="Transparent" Foreground="White" FontSize="20" BorderThickness="0" Cursor="Hand" Panel.ZIndex="99"/>
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,30,0,0"/>
            </Grid>
        </Grid>
    </Grid>
</Window>