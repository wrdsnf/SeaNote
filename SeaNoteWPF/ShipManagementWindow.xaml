<Window x:Class="SeaNoteWPF.ShipManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ships Management" Height="768" Width="1366"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="25" ClipToBounds="True" Background="{StaticResource BgColor}">
        <Grid>
            <Ellipse Width="800" Height="800" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-200,0,0,-200" Opacity="0.15" IsHitTestVisible="False">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#64FFDA" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
                <Ellipse.Effect>
                    <BlurEffect Radius="150"/>
                </Ellipse.Effect>
            </Ellipse>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,30">
                    <StackPanel>
                        <Button Content="← Back to Dashboard" Click="BtnBack_Click" HorizontalAlignment="Left" 
                                Background="Transparent" Foreground="#8D99AE" BorderThickness="0" Cursor="Hand" FontSize="14"/>
                        <TextBlock Text="Ships Management" Style="{StaticResource HeaderTitle}" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource NavyCard}">
                        <StackPanel>
                            <TextBlock Text="SHIPS COUNT" Style="{StaticResource CardLabel}"/>
                            <TextBlock Text="⚓" FontSize="32" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="#3282B8"/>
                            <TextBlock x:Name="lblShipCount" Text="0" Style="{StaticResource BigNumberGold}" FontSize="48"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Style="{StaticResource NavyCard}">
                        <StackPanel>
                            <TextBlock Text="TOTAL CAPACITY" Style="{StaticResource CardLabel}"/>
                            <TextBlock Text="⌛" FontSize="32" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="#3282B8"/>
                            <TextBlock x:Name="lblTotalCap" Text="0" Style="{StaticResource BigNumberGold}" FontSize="48" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="4" Style="{StaticResource NavyCard}">
                        <StackPanel>
                            <TextBlock Text="TOTAL TRIPS" Style="{StaticResource CardLabel}"/>
                            <TextBlock Text="🗺️" FontSize="32" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="#3282B8"/>
                            <TextBlock x:Name="lblTotalTrips" Text="0" Style="{StaticResource BigNumberGold}" FontSize="48" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Grid.Row="2" Background="#331C2541" CornerRadius="20" Padding="20" BorderBrush="#33FFFFFF" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="tbSearch" Style="{StaticResource InputStyle}" Tag="Search ships..." TextChanged="TbSearch_TextChanged"/>

                            <Button Grid.Column="2" Content="+ Add Ship" Click="BtnAdd_Click"
                                    Background="{StaticResource BtnAddDefault}" Foreground="#0B132B" FontWeight="Bold"
                                    Padding="20,10">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>

                        <DataGrid x:Name="dgShips" Grid.Row="1" Style="{StaticResource GlassDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" Visibility="Hidden"/>
                                <DataGridTextColumn Header="Ship Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="100"/>
                                <DataGridTextColumn Header="Capacity" Binding="{Binding Capacity}" Width="120"/>
                                <DataGridTextColumn Header="Fuel" Binding="{Binding Fuel}" Width="120"/>

                                <DataGridTemplateColumn Header="Actions" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="✏️" Click="BtnEdit_Click" Tag="{Binding Id}" 
                                                        Background="Transparent" BorderThickness="0" Margin="0,0,10,0" Cursor="Hand" ToolTip="Edit"/>
                                                <Button Content="❌" Click="BtnDelete_Click" Tag="{Binding Id}" 
                                                        Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="Delete"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>

            <Grid x:Name="ModalOverlay" Visibility="Collapsed" Background="#CC000000">
                <Border Width="500" Background="{StaticResource GlassModalBg}" 
                        CornerRadius="20" Padding="30" BorderBrush="#33FFFFFF" BorderThickness="1"
                        VerticalAlignment="Center" HorizontalAlignment="Center">

                    <Border.Effect>
                        <DropShadowEffect BlurRadius="40" Color="Black" Opacity="0.5"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock x:Name="lblModalTitle" Text="Add Ship" Style="{StaticResource HeaderTitle}" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                        <TextBlock Text="Ship Name" Foreground="#8D99AE" Margin="0,0,0,5"/>
                        <TextBox x:Name="tbName" Style="{StaticResource GlassInput}" Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Year" Foreground="#8D99AE" Margin="0,0,0,5"/>
                                <TextBox x:Name="tbYear" Style="{StaticResource GlassInput}" Margin="0,0,0,15"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Capacity (Ton)" Foreground="#8D99AE" Margin="0,0,0,5"/>
                                <TextBox x:Name="tbCapacity" Style="{StaticResource GlassInput}" Margin="0,0,0,15"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Fuel Type" Foreground="#8D99AE" Margin="0,0,0,5"/>
                        <TextBox x:Name="tbFuel" Style="{StaticResource GlassInput}" Margin="0,0,0,30"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="btnSave" Content="Save" Click="BtnSave_Click" Grid.Column="0"
                                    Background="{StaticResource BtnAddDefault}" Foreground="#0B132B" FontWeight="Bold" Height="45">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <Button Content="Cancel" Click="BtnCloseModal_Click" Grid.Column="2"
                                    Background="Transparent" BorderBrush="#8D99AE" BorderThickness="1" Foreground="White" Height="45">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </Border>
</Window>