<Window x:Class="SeaNoteWPF.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Management" Height="768" Width="1366"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="25" ClipToBounds="True" Background="{StaticResource BgColor}">
        <Grid>
            <Ellipse Width="800" Height="800" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-200,-200,0,0" Opacity="0.15" IsHitTestVisible="False">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#FF4757" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
                <Ellipse.Effect>
                    <BlurEffect Radius="150"/>
                </Ellipse.Effect>
            </Ellipse>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,30">
                    <Button Content="← Back to Dashboard" Click="BtnBack_Click" HorizontalAlignment="Left" Background="Transparent" Foreground="#8D99AE" BorderThickness="0" Cursor="Hand"/>
                    <TextBlock Text="User Management" Style="{StaticResource HeaderTitle}" Margin="0,10,0,0"/>
                </StackPanel>

                <Grid Grid.Row="1" Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource NavyCard}">
                        <StackPanel>
                            <TextBlock Text="TOTAL USERS" Style="{StaticResource CardLabel}"/>
                            <TextBlock x:Name="lblTotalUsers" Text="0" Style="{StaticResource BigNumberGold}"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="2" Style="{StaticResource NavyCard}">
                        <StackPanel>
                            <TextBlock Text="ENGINEERS" Style="{StaticResource CardLabel}"/>
                            <TextBlock x:Name="lblTotalEng" Text="0" Style="{StaticResource BigNumberGold}" Foreground="#64FFDA"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Column="4" Style="{StaticResource NavyCard}">
                        <StackPanel>
                            <TextBlock Text="OWNERS" Style="{StaticResource CardLabel}"/>
                            <TextBlock x:Name="lblTotalOwn" Text="0" Style="{StaticResource BigNumberGold}" Foreground="#F59E0B"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Grid.Row="2" Background="#331C2541" CornerRadius="20" Padding="20" BorderBrush="#33FFFFFF" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="tbSearch" Style="{StaticResource InputStyle}" Tag="Search users..." TextChanged="TbSearch_TextChanged"/>
                            <Button Grid.Column="2" Content="+ Add User" Click="BtnAdd_Click" Background="{StaticResource BtnAddDefault}" Foreground="#0B132B" FontWeight="Bold" Padding="20,10">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>

                        <DataGrid x:Name="dgUsers" Grid.Row="1" Style="{StaticResource GlassDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="150"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                                <DataGridTemplateColumn Header="Actions" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="✏️" Click="BtnEdit_Click" Tag="{Binding Id}" Background="Transparent" BorderThickness="0" Cursor="Hand"/>
                                                <Button Content="❌" Click="BtnDelete_Click" Tag="{Binding Id}" Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="10,0,0,0"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>

            <Grid x:Name="ModalOverlay" Visibility="Collapsed" Background="#CC000000">
                <Border Width="500" Background="{StaticResource GlassModalBg}" CornerRadius="20" Padding="30" BorderBrush="#33FFFFFF" BorderThickness="1">
                    <StackPanel>
                        <TextBlock x:Name="lblModalTitle" Text="Add User" Style="{StaticResource HeaderTitle}" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <TextBlock Text="Username" Foreground="#8D99AE"/>
                        <TextBox x:Name="tbUsername" Style="{StaticResource GlassInput}" Margin="0,0,0,10"/>

                        <TextBlock Text="Full Name" Foreground="#8D99AE"/>
                        <TextBox x:Name="tbFullName" Style="{StaticResource GlassInput}" Margin="0,0,0,10"/>

                        <TextBlock Text="Role" Foreground="#8D99AE"/>
                        <ComboBox x:Name="cbRole" Height="40" Margin="0,0,0,10" Padding="10,0" FontSize="14">
                            <ComboBoxItem Content="admin"/>
                            <ComboBoxItem Content="engineer"/>
                            <ComboBoxItem Content="owner"/>
                        </ComboBox>

                        <TextBlock Text="Email" Foreground="#8D99AE"/>
                        <TextBox x:Name="tbEmail" Style="{StaticResource GlassInput}" Margin="0,0,0,10"/>

                        <TextBlock Text="Password (Default)" Foreground="#8D99AE"/>
                        <TextBox x:Name="tbPassword" Style="{StaticResource GlassInput}" Margin="0,0,0,30"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnSave" Content="Save" Click="BtnSave_Click" Grid.Column="0" Background="{StaticResource BtnAddDefault}" Foreground="#0B132B" FontWeight="Bold" Height="45">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button Content="Cancel" Click="BtnCloseModal_Click" Grid.Column="2" Background="Transparent" BorderBrush="#8D99AE" BorderThickness="1" Foreground="White" Height="45">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>